<UserControl x:Class="MailSender.Views.ListViewItemScheduler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:ViewModel="clr-namespace:MailSender.ViewModel"
             xmlns:local="clr-namespace:MailSender.Views"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="175">

    <UserControl.DataContext>
        <ViewModel:MainWindowViewModel/>
    </UserControl.DataContext>
    
    <StackPanel Orientation="Horizontal">
        <Button Content="//" Width="25" Click="BtnEditEmailText_Click" Tag="{Binding SendDateTime}"/>
        <DatePickerTextBox x:Name="datePickerTextBox" Width="125"/>
        <Button Content="-" Width="25" Command="{Binding BtnDelMail}" CommandParameter="{Binding SendDateTime}"/>
    </StackPanel>
</UserControl>
