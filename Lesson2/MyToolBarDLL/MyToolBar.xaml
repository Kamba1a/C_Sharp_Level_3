<UserControl x:Class="MyToolBarDLL.MyToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyToolBarDLL"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="480">
    <StackPanel Orientation="Horizontal">
        <Label x:Name="label" Content="Content" HorizontalContentAlignment="Right" Height="25" Width="130"/>
        <ComboBox x:Name="comboBox" Height="25" VerticalAlignment="Center" Width="270"/>
        <Button x:Name="btnAdd" Width="25" Height="25" ToolTip="Добавить">
            <Image Source="Images\add.png"/>
        </Button>
        <Button x:Name="btnEdit" Width="25" Height="25" ToolTip="Редактировать">
            <Image Source="Images\edit.png"/>
        </Button>
        <Button x:Name="btnDelete" Width="25" Height="25" ToolTip="Удалить">
            <Image Source="Images\delete.png"/>
        </Button>
    </StackPanel>
</UserControl>
