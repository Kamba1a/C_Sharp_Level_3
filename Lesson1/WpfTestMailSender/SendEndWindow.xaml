<Window x:Class="WpfTestMailSender.SendEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="SendEndWindow" Height="175" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" BorderThickness="1">
    <Grid>
        <Label x:Name="lSendEnd" Content="Работа завершена" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" BorderThickness="0" Background="Transparent">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFB0B298" Offset="0"/>
                    <GradientStop Color="#FFE8E8D8" Offset="1"/>
                </LinearGradientBrush>

            </Label.Foreground>
        </Label>
        <Button Content="ОК" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="76" Click="Button_Click" Height="30"/>

    </Grid>
</Window>
