<Window x:Class="WpfTestMailSender.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="Auto" Width="Auto" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" BorderThickness="1" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>
        <Label Content="Невозможно отправить письмо:"  HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" Margin="5" Grid.Row="0" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="lblError" Content="Ошибка"  HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" Margin="10" Grid.Row="1"/>
        <Button Content="ОК" HorizontalAlignment="Center" Margin="161,0,161,20" VerticalAlignment="Bottom" Width="76" Click="Button_Click" Height="30" Grid.Row="2"/>
    </Grid>
</Window>
